#schemacheck on
#fuzzy kind excellent-poor excellent:sigmoid 4 0.7, poor:sigmoid -4 0.3
#fuzzy var food excellent-poor
#fuzzy var service excellent-poor
#fuzzy system multiplicative
#fuzzy attr tip

((<x> food excellent)(<x> service excellent) -> "large tip" (! (<x> tip 1)))
((<x> food excellent)(<x> service poor) -> "small tip" (! (<x> tip 1)))
((<x> food excellent)(<x> service poor) -> "medium tip" (! (<x> tip 1)))

(! (B1 food 0.3) (B1 service 0.9))
(! (B2 food 0.3) (B2 service 0.7))
(! (B3 food 0.7) (B3 service 0.3))
